<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>ƒ∞hale Paneli - Ana Sayfa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        body {
            font-family: 'Inter', sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #f3f4f6;
        }
        
        /* MODERN Fƒ∞LTRE √áUBUƒûU */
        .filter-bar {
            background: white;
            border-bottom: 1px solid #e5e7eb;
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        }

        /* Kategori Kaydƒ±rma Alanƒ± */
        .category-scroll {
            display: flex;
            gap: 10px;
            overflow-x: auto;
            white-space: nowrap;
            padding: 10px 0;
            -ms-overflow-style: none;  /* IE and Edge */
            scrollbar-width: none;  /* Firefox */
        }
        .category-scroll::-webkit-scrollbar {
            display: none; /* Chrome, Safari, Opera */
        }

        /* Kategori Etiketleri */
        .cat-link {
            display: inline-flex;
            align-items: center;
            padding: 6px 16px;
            border-radius: 50px;
            font-size: 0.9rem;
            font-weight: 500;
            color: #4b5563;
            background-color: #f3f4f6;
            text-decoration: none;
            transition: all 0.2s ease;
            border: 1px solid transparent;
        }

        .cat-link:hover {
            background-color: #e5e7eb;
            color: #111827;
        }

        .cat-link.active {
            background-color: #111827; /* Siyah Se√ßili */
            color: white;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }

        /* Kart Tasarƒ±mƒ± */
        .card {
            border: none;
            border-radius: 16px;
            transition: transform 0.2s, box-shadow 0.2s;
            background: white;
        }
        .card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.08) !important;
        }
        
        .status-toggle .btn {
            border-radius: 8px;
            font-size: 0.85rem;
            font-weight: 600;
        }
        
        main { flex: 1; margin-top: 20px; }
        footer { background-color: #1f2937; color: #9ca3af; padding: 30px 0; margin-top: auto; }
        
        /* Yanƒ±p S√∂nme Efekti */
        @keyframes blink { 50% { opacity: 0.5; } }
        .animate-pulse { animation: blink 2s infinite; }
    </style>
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-3">
        <div class="container">
            <a class="navbar-brand fw-bold d-flex align-items-center gap-2" href="/">
                 <span class="bg-primary text-white rounded p-1 px-2 fs-6">ƒ∞H</span> ƒ∞hale<span class="text-primary">Paneli</span>
            </a>
            
            <div class="d-flex gap-2">
                <a href="/dashboard" class="btn btn-outline-light btn-sm px-3 rounded-pill fw-medium">
                    <i class="fas fa-user-circle me-1"></i> Panelim
                </a>
                <a href="/logout" class="btn btn-danger btn-sm px-3 rounded-pill fw-medium">
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </div>
        </div>
    </nav>

    <div class="filter-bar">
        <div class="container">
            <div class="d-flex align-items-center gap-3 py-2">
                
                <div class="d-none d-md-block border-end pe-3">
                    <div class="btn-group status-toggle shadow-sm" role="group">
                        <a href="/?durum=tumu&kategori=<%= seciliKategori %>" class="btn btn-sm <%= seciliFiltre === 'tumu' ? 'btn-dark' : 'btn-light text-muted border' %>">
                            T√ºm√º
                        </a>
                        <a href="/?durum=aktif&kategori=<%= seciliKategori %>" class="btn btn-sm <%= seciliFiltre === 'aktif' ? 'btn-success text-white' : 'btn-light text-muted border' %>">
                            Aktif
                        </a>
                        <a href="/?durum=kapali&kategori=<%= seciliKategori %>" class="btn btn-sm <%= seciliFiltre === 'kapali' ? 'btn-secondary text-white' : 'btn-light text-muted border' %>">
                            Biten
                        </a>
                    </div>
                </div>

                <div class="d-md-none border-end pe-3">
                    <div class="dropdown">
                        <button class="btn btn-sm btn-light border dropdown-toggle fw-bold" type="button" data-bs-toggle="dropdown">
                            <%= seciliFiltre === 'aktif' ? 'üü¢ Aktif' : (seciliFiltre === 'kapali' ? 'üèÅ Biten' : 'üì¶ T√ºm√º') %>
                        </button>
                        <ul class="dropdown-menu shadow border-0">
                            <li><a class="dropdown-item" href="/?durum=tumu&kategori=<%= seciliKategori %>">T√ºm√º</a></li>
                            <li><a class="dropdown-item" href="/?durum=aktif&kategori=<%= seciliKategori %>">Aktif Olanlar</a></li>
                            <li><a class="dropdown-item" href="/?durum=kapali&kategori=<%= seciliKategori %>">Bitenler</a></li>
                        </ul>
                    </div>
                </div>

                <div class="category-scroll flex-grow-1">
                    <a href="/?durum=<%= seciliFiltre %>&kategori=hepsi" 
                       class="cat-link <%= seciliKategori === 'hepsi' ? 'active' : '' %>">
                       <i class="fas fa-border-all me-2 small"></i>T√ºm√º
                    </a>

                    <% categories.forEach(cat => { %>
                        <a href="/?durum=<%= seciliFiltre %>&kategori=<%= cat.category_id %>" 
                           class="cat-link <%= Number(seciliKategori) === cat.category_id ? 'active' : '' %>">
                            <%= cat.name %>
                        </a>
                    <% }) %>
                </div>

            </div>
        </div>
    </div>

    <main class="container">
        
        <div class="d-flex align-items-center justify-content-between mb-4">
            <div>
                <h5 class="fw-bold text-dark m-0 d-flex align-items-center gap-2">
                    <% 
                       const seciliKatAd = categories.find(c => c.category_id == seciliKategori);
                       const baslikKategori = seciliKategori === 'hepsi' ? 'Vitrin' : (seciliKatAd ? seciliKatAd.name : 'Bilinmeyen');
                    %>
                    <span class="text-dark"><%= baslikKategori %></span>
                    <span class="text-muted fw-normal small">kategorisindeki ilanlar</span>
                </h5>
            </div>
            <span class="badge bg-white text-dark border shadow-sm px-3 py-2 rounded-pill">
                <%= ihaleler.length %> ƒ∞lan
            </span>
        </div>
        
        <div class="row g-4">
    
        <% if (ihaleler.length === 0) { %>
            <div class="col-12">
                <div class="text-center py-5">
                    <div class="bg-white d-inline-block p-4 rounded-circle shadow-sm mb-3">
                         <i class="fas fa-search fa-3x text-muted opacity-50"></i>
                    </div>
                    <h5 class="fw-bold text-secondary">Sonu√ß Bulunamadƒ±</h5>
                    <p class="text-muted small">Se√ßtiƒüiniz kriterlere uygun aktif ihale yok.</p>
                    <a href="/" class="btn btn-sm btn-dark px-4 rounded-pill">Filtreleri Temizle</a>
                </div>
            </div>
        <% } %>

        <% ihaleler.forEach(ihale => { %>
            <% 
            let minTeklif = ihale.en_yuksek_teklif ? Number(ihale.en_yuksek_teklif) + 1 : Number(ihale.start_price);
            let fiyatFormat = (fiyat) => {
                return new Intl.NumberFormat('tr-TR', { minimumFractionDigits: 2, maximumFractionDigits: 2 }).format(fiyat);
            };
            %>

            <div class="col-md-6 col-lg-4 col-xl-3"> <div class="card h-100 shadow-sm overflow-hidden">
                    
                    <div style="height: 200px; position: relative; background-color: #f8f9fa;">
                        <% if (ihale.image_url) { %>
                            <img src="/static/images/<%= ihale.image_url %>" class="w-100 h-100 object-fit-cover" style="object-fit: cover;">
                        <% } else { %>
                            <div class="d-flex flex-column align-items-center justify-content-center h-100 text-secondary">
                                <i class="fas fa-camera fa-2x mb-2 opacity-25"></i>
                                <small class="opacity-50">G√∂rsel Yok</small>
                            </div>
                        <% } %>
                        
                        <% if(ihale.Category) { %>
                            <div class="position-absolute top-0 start-0 m-2">
                                <span class="badge bg-white text-dark shadow-sm fw-normal" style="font-size: 0.7rem;">
                                    <%= ihale.Category.name %>
                                </span>
                            </div>
                        <% } %>

                        <div class="position-absolute top-0 end-0 m-2">
                            <% if (new Date(ihale.end_date) > new Date() && ihale.status == 1) { %>
                                <span class="badge bg-danger shadow-sm animate-pulse" style="font-size: 0.7rem;">
                                    CANLI
                                </span>
                            <% } else { %>
                                <span class="badge bg-secondary shadow-sm" style="font-size: 0.7rem;">Bƒ∞TTƒ∞</span>
                            <% } %>
                        </div>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title text-dark fw-bold mb-1 text-truncate" title="<%= ihale.title %>">
                            <%= ihale.title %>
                        </h6>
                        
                        <div class="mt-auto pt-3">
                            <div class="d-flex justify-content-between align-items-end mb-2">
                                <div>
                                    <small class="text-muted d-block" style="font-size: 10px; font-weight: 600;">G√úNCEL Fƒ∞YAT</small>
                                    <span class="text-primary fw-bold fs-5">
                                        <%= fiyatFormat(ihale.en_yuksek_teklif ? ihale.en_yuksek_teklif : ihale.start_price) %> <small class="fs-6">‚Ç∫</small>
                                    </span>
                                </div>
                            </div>

                            <div class="bg-light rounded p-2 d-flex justify-content-between align-items-center mb-3 border">
                                <small class="text-muted fw-bold" style="font-size: 10px;">‚è≥ KALAN</small>
                                <span class="countdown-box text-danger fw-bold" style="font-size: 0.85rem;" data-endtime="<%= ihale.end_date %>">
                                    --:--:--
                                </span>
                            </div>

                            <% if (new Date(ihale.end_date) > new Date() && ihale.status == 1) { %>
                                <form action="/bid" method="post" class="d-flex gap-2 bid-form">
                                    <input type="hidden" name="tender_id" value="<%= ihale.tender_id %>">
                                    <input type="number" name="amount" class="form-control form-control-sm" placeholder="+<%= fiyatFormat(minTeklif) %>" required min="<%= minTeklif %>">
                                    <button type="submit" class="btn btn-dark btn-sm fw-bold px-3 btn-bid">Ver</button>
                                </form>
                            <% } else { %>
                                <button class="btn btn-light text-muted w-100 btn-sm disabled border" disabled>Sona Erdi</button>
                            <% } %>
                        </div>
                    </div>

                </div>
            </div>
        <% }) %>
        
        </div>
    </main>

    <footer class="text-center mt-5 border-top pt-4">
        <div class="container">
            <small>&copy; 2025 ƒ∞hale Paneli. <span class="text-muted">Modern Altyapƒ± v3.0</span></small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function updateTimers() {
            const timers = document.querySelectorAll('.countdown-box');
            timers.forEach(timer => {
                const endTime = new Date(timer.getAttribute('data-endtime')).getTime();
                const now = new Date().getTime();
                const distance = endTime - now;

                if (distance < 0) {
                    timer.innerHTML = "S√úRE DOLDU";
                    timer.classList.remove('text-danger');
                    timer.classList.add('text-secondary');
                    // Butonu pasife √ßekme mantƒ±ƒüƒ± backend'den de geliyor ama g√∂rsel olarak burada da kilitlenebilir.
                } else {
                    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                    if (days > 0) {
                        timer.innerHTML = `${days}g ${hours}s ${minutes}dk`;
                    } else {
                        timer.innerHTML = `${hours}:${minutes}:${seconds}`;
                    }
                }
            });
        }
        setInterval(updateTimers, 1000);
        updateTimers();

        // Butona basƒ±nca y√ºkleniyor animasyonu
        document.querySelectorAll('.bid-form').forEach(f => {
            f.addEventListener('submit', function() {
                const btn = this.querySelector('.btn-bid');
                btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';
                btn.disabled = true;
            });
        });
    </script>
</body>
</html>